{
  "name": "fictional-sniffle",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky",
    "preview": "vite preview",
    "test": "vitest run",
    "size": "size-limit"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "dexie": "^4.0.11",
    "dompurify": "^3.0.11",
    "fast-xml-parser": "^4.4.2",
    "framer-motion": "^12.23.12",
    "linkedom": "^0.18.11",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@size-limit/file": "^8.2.6",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fake-indexeddb": "^6.1.0",
    "globals": "^16.3.0",
    "husky": "^9.0.10",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3",
    "size-limit": "^8.2.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^3.2.4",
    "workbox-background-sync": "^7.3.0",
    "workbox-build": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/assets/index-*.js",
      "limit": "150 KB"
    }
  ]
}
